<%
@title = 'Plans'
@heading = 'Plans'
@subheading = 'Active Accounts'
@nav_item = 'plans'
%>

<ul class="nav nav-tabs">
  <li><%= link_to_if can?(:index, Plan), "Plan", admin_plan_path(@plan) %></li>
  <li class="active"><%= link_to_if can?(:accounts, Plan), "Accounts", admin_plan_accounts_path(@plan) %></li>
  <li><%= link_to_if can?(:paused_plans, Plan), "Paused Plans", admin_plan_paused_plans_path(@plan) %></li>
</ul>

<% if @accounts.empty? then %>
<p>No accounts found</p>
<% else %>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Company Name</th>
			<th>Active</th>
			<th>Plan</th>
			<th>Gateway</th>
			<th>City</th>
			<th>Zip</th>
			<th>State</th>
			<th>Country</th>
		</tr>
	</thead>
	<tbody>
<% @accounts.each do |account| %>
		<tr>
			<td><%= link_to_if can?(:show, account), account.company_name, admin_account_path(account) %></td>
			<td><%= account_status(account) %></td>
			<td><%= account.plan %></td>
			<td><%= card_gateway(account) %></td>
			<td><%= account.address_city %></td>
			<td><%= account.address_zip %></td>
			<td><%= account.address_state %></td>
			<td><%= account.address_country %></td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @accounts %>
<% end %>
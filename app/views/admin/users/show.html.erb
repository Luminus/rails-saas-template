<%
@title = 'Users'
@heading = 'Users'
@subheading = @user
%>

<ul class="nav nav-tabs">
  <li class="active"><%= link_to "User", admin_user_path(@user) %></li>
  <% if can?(:accounts, @user) %><li><%= link_to "Accounts", admin_user_accounts_path(@user) %></li><% end %>
</ul>

<div style="text-align: right; padding: 10px 0px;">
  <% if can? :edit, @user %><%= link_to "Edit User", edit_admin_user_path(@user), class: "btn btn-primary" %><% end %>
  <% if can? :destroy, @user %><%= link_to "Delete User", admin_user_path(@user), method: :delete, class: "btn btn-danger" %><% end %>
</div>

<dl class="dl-horizontal">
  <dt>First Name</dt>
  <dd><%= @user.first_name %></dd>
  <dt>Last Name</dt>
  <dd><%= @user.last_name %></dd>
  <dt>Email</dt>
  <dd><%= @user.email %>  <a href="mailto:<%= @user.email %>"><span class="glyphicon glyphicon-envelope"></span></a></dd>
  <dt>Active</dt>
  <dd><%if @user.active %><span class="label label-success">Active</span><% else %> <span class="label label-danger">Inactive</span><% end %></dd>
  <dt>Super Admin</dt>
  <dd><%if @user.super_admin %><span class="label label-success">Yes</span><% end %></dd>
</dl>